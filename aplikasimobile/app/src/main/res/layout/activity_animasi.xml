<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/rafiki" />

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Selamat Datang!"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Sebuah ruang bagi mahasiswa untuk terhubung, berkolaborasi, mengikuti acara dan kompetisi, menemukan barang, serta menjelajahi berbagai peluang di kampus."
        android:textColor="#D9D9D9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#3B82F6"
        android:padding="12dp"
        android:text="MULAI"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDisclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Dengan menggunakan aplikasi kami, Anda menyetujui Ketentuan Penggunaan dan Kebijakan Privasi kami"
        android:textColor="#A6A6A6"
        android:textSize="15dp" />

</LinearLayout>
